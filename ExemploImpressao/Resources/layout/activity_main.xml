<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp">
    <TextView
        android:text="Xamarin Impressão G800"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtModelo"
        android:foregroundGravity="top|center"
        android:gravity="top|center"
        android:textStyle="bold"
        android:textSize="22sp" />
    
    <Button
        android:text="Status Impressora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="30px"
        android:minHeight="30px"
        android:id="@+id/btnStatusImpressora" />
    
    <EditText
        android:hint="Escreva a sua mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtMensagem"
        android:password="false"
        android:phoneNumber="false" />

    <TextView
        android:text="Configuração de Impressão"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:inputType="none"
        android:textAlignment="center" />

    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioGroup
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup1"
                android:orientation="horizontal">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Esquerda"
                    android:layout_weight="1"
                    android:id="@+id/rbEsquerta" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Centralizado"
                    android:layout_weight="1"
                    android:id="@+id/rbCentralizado" />
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Direita"
                    android:layout_weight="1"
                    android:id="@+id/rbDireta" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:text="Negrito"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/btnNegrito"
                android:textOff="Negrito"
                android:textOn="Negrito" />

            <ToggleButton
                android:text="Itálico"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/btnItalico"
                android:textOff="Itálico"
                android:textOn="Itálico" />

            <ToggleButton
                android:text="Sublinhado"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:id="@+id/btnSublinhado"
                android:textOff="Sublinhado"
                android:textOn="Sublinhado" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">
        <TextView
            android:layout_weight="1"
            android:text="Fonte:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:textStyle="bold" />
        <Spinner
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spFonte" />

        <TextView
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:text="Size:"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px"
            android:textSize="16sp"
            android:id="@+id/textView2"
            android:textStyle="bold" />

        <Spinner
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spTamanho" />

    </LinearLayout>
    <Button
        android:text="Imprimir Mensagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnImprimirMensagem" />

    <Button
        android:text="Imprimir Imagem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnImprimirImagem" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">    

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Bar Code Height"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textSize="12sp"
                android:id="@+id/textView22"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spCodeHeight" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Bar Code Width"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textSize="12sp"
                android:id="@+id/textView23"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spCodeWidth" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:text="Tipo Code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:minWidth="25px"
                android:minHeight="25px"
                android:textSize="12sp"
                android:id="@+id/textView2"
                android:textStyle="bold" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spTipoCode" />

        </LinearLayout>

    </LinearLayout>
    
    <Button
        android:text="Imprimir BarCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:id="@+id/btnImprimirBarCode" />

</LinearLayout>